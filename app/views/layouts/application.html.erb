<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tag %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <%= link_to image_tag('logo.png'), '/' %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
              <li><%= link_to 'マイページ', mypage_path,class: "btn btn-outline-secondary text-dark m-2" %></li>
              <li><%= link_to '商品一覧', items_path,class: "btn btn-outline-secondary text-dark m-2" %></li>
              <li><%= link_to 'カート', carts_path,class: "btn btn-outline-secondary text-dark m-2" %></li>
              <li><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete,class: "btn btn-outline-secondary text-dark m-2" %></li>

            <% elsif admin_signed_in? %>
              <li><%= link_to '商品一覧', admins_items_path,class: "btn btn-outline-secondary text-dark m-2" %></li>
              <li><%= link_to '会員一覧', admins_customers_path,class: "btn btn-outline-secondary text-dark m-2" %></li>
              <li><%= link_to '注文一覧', admins_orders_path,class: "btn btn-outline-secondary text-dark m-2" %></li>
              <li><%= link_to 'ジャンル一覧', admins_genres_path,class: "btn btn-outline-secondary text-dark m-2" %></li>
              <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "btn btn-outline-secondary text-dark m-2" %></li>

              <% else %>
              <li><%= link_to 'About', about_path,class: "btn btn-outline-secondary text-dark m-2" %></li>
              <li><%= link_to '商品一覧', items_path,class: "btn btn-outline-secondary text-dark m-2" %></li>
              <li><%= link_to '新規登録', new_customer_registration_path,class: "btn btn-outline-secondary text-dark m-2" %></li>
              <li><%= link_to 'ログイン', new_customer_session_path,class: "btn btn-outline-secondary text-dark m-2" %></li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <div>　</div>
      <% flash.each do |message_type, message|%>
        <div class="flash_message">
        <%= content_tag :div, message, class: message_type %>
        </div>
      <% end %>

      <%= yield %>
    </main>
    <footer>
    </footer>
  </body>
</html>

