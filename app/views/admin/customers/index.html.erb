<div class="ml-5">
<h2>
  <td>会員一覧</td>
</h2>
  <table class='table table-hover'>
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>

      </tr>
    </thead>
    <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.first_name %><%= customer.last_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div><%= paginate @customers %></div>
</div>
