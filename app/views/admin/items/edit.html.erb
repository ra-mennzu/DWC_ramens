<main>
  <div class="container">
    <div class="pt-5">
      <h3><span style="background-color:#dcdcdc">商品新規登録</span></h3>
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
  
      <table class="table">
        <tr>
          <td>商品画像</td>
          <td><%= f.attachment_field :image_id %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --") %></td>
        </tr>
        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price %>円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "販売中", value: :true %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "販売停止中", value: :false %>
          </td>
        </tr>
      </table>
  
      <%= f.submit '変更を保存', class: "btn btn-success  mx-auto" %>
      <% end %>
    </div>
  </div>
</main>