<!--商品一覧-->
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-9">
      <div class="row">
        <div class = "col-4"><b>商品一覧</b>　(全<%= @items.count %>件)</div>
      </div>
      <div class="row">
        <% @items.each do |item| %>
        <div class = "col-3">
          <div><%= attachment_image_tag item, :image, fallback: "no_image.jpg", size: "100x100" %>
          </div>
          <div><%= link_to item.name,item_path(item.id) %></div>
          <div>¥<%= item.price.to_s(:delimited) %></div>
        </div>
        <% end %>
      </div>
     <div class="row">
      <div><%= paginate @items %></div>
      </div>
    </div>
  </div>
</div>